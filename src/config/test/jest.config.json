{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../../",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "coverageReporters": ["json"],
  "coverageDirectory": "../coverage/unit",
  "collectCoverageFrom": [
    "**/*.(t|j)s",
    "!main.ts",
    "!config/**",
    "!**/config/**",
    "!**/*.dto.ts",
    "!**/*.interface.ts",
    "!**/*.schema.ts"
  ],
  "coveragePathIgnorePatterns": [".module.ts$", ".spec.ts$", ".e2e-spec.ts$"]
}

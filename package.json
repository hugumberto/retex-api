{
  "name": "retex-api",
  "version": "0.0.1",
  "description": "A sample project to be used as a template for a new edge application in NestJS.",
  "author": "Luis Rodrigues<luishrodg1@gmail.com>",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "node dist/main",
    "dev": "nest start --watch",
    "test": "DOTENV_CONFIG_PATH=.env.test NODE_ENV=test jest --setupFiles dotenv/config --config ./src/config/test/jest.config.json",
    "test:cov": "DOTENV_CONFIG_PATH=.env.test NODE_ENV=test jest --setupFiles dotenv/config --config ./src/config/test/jest.config.json --coverage",
    "test:e2e": "DOTENV_CONFIG_PATH=.env.test NODE_ENV=test jest --setupFiles dotenv/config --config ./src/config/test/jest-e2e.config.json --runInBand",
    "test:e2e:cov": "DOTENV_CONFIG_PATH=.env.test NODE_ENV=test jest --setupFiles dotenv/config --config ./src/config/test/jest-e2e.config.json --coverage --runInBand",
    "test:merge": "ts-node ./src/config/test/merge-coverage.ts --report ./coverage/e2e/coverage-final.json --report ./coverage/unit/coverage-final.json",
    "test:full:cov": "rimraf coverage && npm run test:cov && npm run test:e2e:cov && npm run test:merge",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js -d src/infrastructure/data/typeorm/config/datasource.ts",
    "typeorm:migrate": "ts-node src/infrastructure/data/typeorm/config/generate-migration.ts"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.1",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/typeorm": "^11.0.0",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dotenv": "^16.5.0",
    "joi": "^17.13.3",
    "nestjs-pino": "^4.4.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.16.0",
    "pino-http": "^10.4.0",
    "pino-loki": "^2.5.0",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^6.0.1",
    "rxjs": "^7.8.2",
    "typeorm": "^0.3.24",
    "typeorm-extension": "^3.7.1",
    "zod": "^3.25.28"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.1.1",
    "@types/bcryptjs": "^3.0.0",
    "@types/express": "^5.0.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.21",
    "@types/passport": "^0",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "husky": "^9.1.7",
    "istanbul-api": "^3.0.0",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.7",
    "prettier": "^3.5.3",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.4",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.8.3"
  },
  "packageManager": "yarn@4.9.1"
}
